    <!-- Contact Form -->
    <section id="contact_form_1" class="dark primary-gradient">
        <div class="container">
            <div class="row">
                <div class="col-md-12 title-m">
                        <h2>Entrer en contact</h2>
                        <h3>Remplissez le formulaire de contact ci-dessous</h3>
                    </div>
                
                {{ form_start(form) }}
                <div class="col-md-8 col-md-offset-2 center col-sm-12">

                            {% if not form.vars.valid %}
                                <div class="alert alert-danger" role="alert">
                                    {{ form_errors(form) }}
                                </div>
                            {% endif %} 
                       
                            <span class="input">
                                <label  for="input-10">
                                    <span > <i class="ion-person"></i> Nom</span>
                                </label>
                                
                                {{ form_widget(form.nom, {required: true, 'id': 'input-10', 'attr': {'placeholder': "Insérez votre nom"} }) }}
                                
                            </span>
                                
                            <span class="input">
                                <label  for="input-11">
                                <span > <i class="ion-person"></i> Prénom</span>
                                </label>
                                
                                {{ form_widget(form.prenom, {required: true, 'id': 'input-11','attr': {'placeholder': "Insérez votre prénom"} }) }}
                                
                            </span>
                    
                            <span class="input">
                              <label  for="input-12">
                              <span > <i class="ion-at"></i> Email</span>
                              </label>
                                {{ form_widget(form.email, { required: true, 'id': 'input-12','attr': {'placeholder': "hello@gmail.com"} }) }}
                              
                            </span>
                                
                            <span class="input">
                              <label  for="input-13">
                              <span > <i class="ion-at"></i> Numéro de téléphone</span>
                              </label>
                                {{ form_widget(form.telephone, {required: true, 'id': 'input-13','attr': {'placeholder': "Votre numéro de téléphone"} }) }}
                              
                            </span>
                    
                            <span class="input">
                                <label for="input-14">
                                <span><i class="ion-chatbubbles"></i> Message</span>
                                </label>
                                {{ form_widget(form.message, { required: true, 'id': 'input-14','attr': {'placeholder': "votre message"} }) }}
                            </span>

                            <span class="input">
                                {{ form_label(form.captcha) }}
                                 <div class="alert alert-danger">
                                    {{ form_errors(form.captcha) }}
                                </div>
                                
                                {{ form_widget(form.captcha) }}
                            </span>


                            
                    
                            <input type="submit" class="btn alt" value="soumettre">
                        
                    </div>
                
                 {{ form_end(form) }}
            </div>
        </div>
    </section>


    {% for msg in app.session.flashBag.get('info') %}

