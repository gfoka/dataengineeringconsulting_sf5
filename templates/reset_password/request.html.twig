{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block headerimage %}
    <header id="header_subpage2" style="background: url(img/banner-subpage2.jpg);">
            <div class="shader-primary" style="opacity:.91;"></div>
            <div class="container">
                <div class="row">
                    <div class="caption ani_ fadeinup">
                        <div class="breadcrumb">
                            <a href="#">Home</a> <span>/</span><a href="#" class="this_page">Register </a>
                        </div>
                        <h2>Reset your password</h2>
                    </div>
                </div>
            </div>
        </header>
{% endblock %}




{% block main %}

    <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-12 ani_ fadeinleft">
                            
                            

                            {% for flash_error in app.flashes('reset_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}

                            {{ form_start(requestForm) }}
                                {{ form_row(requestForm.email) }}
                                <div>
                                    <small>
                                        Enter your email address and we will send you a
                                        link to reset your password.
                                    </small>
                                </div>

                                <button class="btn btn-primary">Send password reset email</button>
                            {{ form_end(requestForm) }}





                    </div>
                </div>
            </div>
        </section>
{% endblock %}