
{% extends 'base.html.twig' %}

{% block headerimage %}
<!-- Header -->
<header id="header_subpage1" style="background-image:url({{ asset('uploads/' ~ article.imageAgencyPost) }})">
    <div class="shader-dark"></div>
    <div class="caption ani_ fadeinup">
        <h4>{{ article.dateCreation |date('d F Y') }}</h4>
        <h1>{{ article.titre }}</h1>
        <h3>{{ article.categorie.lebelle }}</h3>
    </div>
    <i class="ion-ios-arrow-down arrow-down"></i>
</header>
{% endblock %}



{% block main %}
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="article post ani_ fadeinup">
                    <div class="article-pic"><img src="{{ asset('uploads/' ~ article.auteur.photo) }}" alt=""></div>
                    <div class="article-foot">
                        <h4>Written by <b>{{ article.auteur.nom ~" "~article.auteur.prenom  }}</b></h4><span>{{ article.dateCreation |date('d-m-Y') }}</span></div>
                </div>
                
                {{ article.contenu | raw }}
            </div>
        </div>
    </div>
</section>




<!-- Social Channels -->
<section class="center">
    <div class="container no-pad-top">
        <div class="row">
            <div class="title-m">
                <h2>Share on social media</h2>
                <h3>Click a social channel below to share</h3>
            </div>
            <div class="col-md-12">
                <a href="#" class="social-icon"><i class="ion-social-linkedin-outline"></i></a>
                <a href="#" class="social-icon"><i class="ion-social-facebook"></i></a>
                <a href="#" class="social-icon"><i class="ion-social-twitter"></i></a>
                <a href="#" class="social-icon"><i class="ion-social-instagram"></i></a>
                <a href="#" class="social-icon"><i class="ion-social-youtube"></i></a>
                <a href="#" class="social-icon"><i class="ion-social-pinterest-outline"></i></a>
            </div>
        </div>
    </div>
</section>

