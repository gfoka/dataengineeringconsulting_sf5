{% extends 'admin.html.twig' %}

{% block title %}TypeFormation index{% endblock %}

{% block body %}
    <h1>TypeFormation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_formation in type_formations %}
            <tr>
                <td>{{ type_formation.id }}</td>
                <td>{{ type_formation.libelle }}</td>
                <td>{{ type_formation.description }}</td>
                <td>{{ type_formation.photo }}</td>
                <td>{{ type_formation.slug }}</td>
                <td>
                    <a href="{{ path('app_type_formation_show', {'id': type_formation.id}) }}">show</a>
                    <a href="{{ path('app_type_formation_edit', {'id': type_formation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_type_formation_new') }}">Create new</a>
{% endblock %}
